#!/usr/bin/env node
// vim:syntax=javascript

var vock = require('..'),
    argv = require('optimist')
        .usage('Usage:\n' +
               '   vock create\n' +
               '   vock connect {id}')
        .describe('server', 'Server address (host:port)')
        .describe('mute', 'Disable recording')
        .describe('version', 'Show CLI version')
        .boolean('mute')
        .boolean('version')
        .alias('v', 'version')
        .alias('s', 'server')
        .alias('m', 'mute')
        .argv;

vock.cli.run(argv);
